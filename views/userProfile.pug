extends layout

block content

    h1(class="homePageIntro") Welcome to ndied, the best place to find or look for a job.
    br 
    h1(class="homePageIntro") Your information
    br

    table(id="jobsTable")
        thead(class="usersTable") 
            tr(class="usersTable")  
                th(class="usersTable") Your Name 
                th(class="userTable") Your Date of Birth
                th(class="usersTable") Your Gender
                th(class="usersTable") Your Username
        tbody(class="usersTable") 
            
                tr(class="usersTable")  
                    form(action="") 
                        td(class="jobsTable")= currentUser.firstName + " " + currentUser.lastName
                        td(class="jobsTable")= currentUser.dateOfBirth 
                        td(class="jobsTable")= currentUser.gender
                        td(class="jobsTable")= currentUser.username    
        br